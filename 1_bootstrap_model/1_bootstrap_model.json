                                                              "sealed_keys",
                                                              "bootstrap_identity"
                                                          ]
                                          }
                   },
    "workflows":  {
                      "normal_boot":  [
                                          "rom_verifier.verify()",
                                          "hardware_probe.enumerate()",
                                          "key_vault_init.seal_keys()",
                                          "launch_main_aico(enclave=true)",
                                          "write signed_boot_report -\u003e immutable_storage"
                                      ],
                      "failed_verification":  [
                                                  "halt further boot",
                                                  "emit signed_failure_report -\u003e debug_channel",
                                                  "light LED/warn and require human intervention"
                                              ]
                  },
    "failure_modes":  {
