{
    "description":  "Immutable startup model baked into ASIC/ROM. Responsible for hardware and software integrity checks, minimal orchestration until handoff, and secure chain-of-trust establishment.",
    "functions":  [
                      "Verify integrity and authenticity of model binaries at boot",
                      "Check compute, memory, peripheral allocations and availability",
                      "Validate introspective layer and DMS/SOC readiness",
                      "Initialize secure storage and bootstrap keys",
                      "Record a signed boot report to immutable audit storage"
                  ],
    "lifecycle":  {
                      "phase_0":  "ROM execution â€” minimal logic, deterministic verification routines",
                      "phase_1":  "Hardware enumeration and crypto checks",
                      "phase_2":  "Launch main AICO process in secure enclave mode",
                      "phase_3":  "Handoff and dormancy or watchdog monitoring"
                  },
    "components":  {
                       "rom_verifier":  {
                                            "description":  "Static verifier for bootstrap images",
                                            "inputs":  [
                                                           "ROM image",
                                                           "expected signature list"
                                                       ],
                                            "outputs":  [
                                                            "boot_pass/fail",
                                                            "signed_boot_report"
                                                        ]
                                        },
                       "hardware_probe":  {
                                              "description":  "Enumerates hardware, checks MMIO regions and critical peripherals",
