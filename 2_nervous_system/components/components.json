{
    "task_queue":  {
                       "description":  "Priority-ordered queue with preemption semantics",
                       "fields":  [
                                      "task_id",
                                      "priority",
                                      "deadline",
                                      "resource_requirements"
                                  ]
                   },
    "heartbeat_manager":  {
                              "description":  "Monitors agent heartbeats and triggers recovery",
                              "methods":  [
                                              "register_heartbeat(agent_id)",
                                              "get_status()"
                                          ]
                          },
    "resource_allocator":  {
                               "description":  "Allocates compute and IO resources according to policies",
                               "policies":  [
                                                "safety_first",
                                                "latency_sensitive",
                                                "batch_tasks"
                                            ]
                           },
    "fast_abort_controller":  {
                                  "description":  "Hardware-interfacing path for immediate aborts (triggers SOC/DMS)",
                                  "methods":  [
                                                  "abort_task(task_id)",
                                                  "engage_soc_fail_safe()"
                                              ]
                              }
}
